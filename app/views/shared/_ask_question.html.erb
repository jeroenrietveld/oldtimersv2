<div class="row ask-question">
	<header class="span10 offset2 question-info">
		<h3>Stel hieronder meteen je vraag</h3>
	</header>
	<div class="span1 offset1">
		<%= render :partial => "shared/profile_image", :locals => { :border => "white-border" } %>
	</div>
	<div class="span9 question-form-container">
		<%= form_for @question do |f| %>
			<div class="row">
				<%= f.text_field :title, { :placeholder => "Wat is je vraag?", :class => "span9" } %>
			</div>

			<div class="row">
				<%= f.text_area :description, { :placeholder => "Beschrijf je vraag en wees specifiek", :class => "span9 question-textarea", :rows => "10" } %>
			</div>
			
			

			<%= f.submit "Stel vraag" %>
		<% end %>
	</div>
</div>