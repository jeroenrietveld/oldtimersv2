@font-face {
  font-family: 'InterFace';
  src: url('<%= asset_path('InterFaceLt.ttf') %>');
  font-weight: normal;
  font-style: normal;
}

@import "bootstrap";
@import "variables.css.scss";
@import "mixins.css.scss";

html {
	min-height: 100%;
	position: relative;
}

body {
	margin: 0 0 50px;
}

body, html {
	width: 100%;
	background: $grey;
	font-family: InterFace;
	color: $font-color;
	font-size: 100%;
}

input[type=submit] {
	border: none;
}

#clearfix {
	clear: both;
}
.counter-row-margin{
	margin-left:0;
}

/* PROFILE BORDERS */

.profile-image-container figure {
	margin: 0;

	figcaption {
		text-align: center;
	}
}

.profile-border {
	@include rounded-corner(50em);
	box-shadow: 0 0 1px 1px #CCC;
	padding: 3px;
}

.aspirant-border {
	-moz-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	-webkit-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	background-image: url(data:image/svg+xml;base64,); /* gradient overlay */
	background-image: -moz-linear-gradient(bottom, #eaeaea 0%, #fff 100%); /* gradient overlay */
	background-image: -o-linear-gradient(bottom, #eaeaea 0%, #fff 100%); /* gradient overlay */
	background-image: -webkit-linear-gradient(bottom, #eaeaea 0%, #fff 100%); /* gradient overlay */
	background-image: linear-gradient(bottom, #eaeaea 0%, #fff 100%); /* gradient overlay */
}
.beginner-border {
	-moz-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	-webkit-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	background-image: url(data:image/svg+xml;base64,); /* gradient overlay */
	background-image: -moz-linear-gradient(bottom, #68b8c6 0%, #68b8c6 13.26%, #fff 100%); /* gradient overlay */
	background-image: -o-linear-gradient(bottom, #68b8c6 0%, #68b8c6 13.26%, #fff 100%); /* gradient overlay */
	background-image: -webkit-linear-gradient(bottom, #68b8c6 0%, #68b8c6 13.26%, #fff 100%); /* gradient overlay */
	background-image: linear-gradient(bottom, #68b8c6 0%, #68b8c6 13.26%, #fff 100%); /* gradient overlay */
}
.kenner-border {
	background: #FFF;
}
.vakman-border {
	background: #FFF;
}
.expert-border {
	background: #FFF;
}
.master-border {
	-moz-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	-webkit-box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	box-shadow: 0 0 4px rgba(0,0,0,.3), 0 0 4px rgba(32,30,16,.5); /* drop shadow and outer glow */
	background-image: url(data:image/svg+xml;base64,); /* gradient overlay */
	background-image: -moz-linear-gradient(bottom, #ffde97 0%, #d5b956 42.75%, #d0b249 61.25%, #ffddad 62.99%, #edc878 80%, #ffde97 100%); /* gradient overlay */
	background-image: -o-linear-gradient(bottom, #ffde97 0%, #d5b956 42.75%, #d0b249 61.25%, #ffddad 62.99%, #edc878 80%, #ffde97 100%); /* gradient overlay */
	background-image: -webkit-linear-gradient(bottom, #ffde97 0%, #d5b956 42.75%, #d0b249 61.25%, #ffddad 62.99%, #edc878 80%, #ffde97 100%); /* gradient overlay */
	background-image: linear-gradient(bottom, #ffde97 0%, #d5b956 42.75%, #d0b249 61.25%, #ffddad 62.99%, #edc878 80%, #ffde97 100%); /* gradient overlay */
}

::-webkit-input-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; }
::-moz-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; } /* firefox 19+ */
:-ms-input-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; } /* ie */
input:-moz-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; }

button, input[type=submit] {
	font-family: InterFace;
}

.select > input[type="radio"] {
	display: none;
}

.select > input[type="radio"] + label {
	display: inline-block;
	width: 18px;
	height: 18px;
	vertical-align: middle;
  background: url('<%= asset_path('radio_buttons.png') %>') left top no-repeat;
  cursor: pointer;
}

.select > input[type="radio"]:checked + label {
    background: url('<%= asset_path('radio_buttons.png') %>') -18px top no-repeat;
}

.modal-backdrop {
  background-color: rgba(200, 200, 200, 0.4);
}

@import "header.css.scss";
@import "homepage.css.scss";
@import "sign_up.css.scss";
@import "answers.css.scss";
@import "footer.css.scss";