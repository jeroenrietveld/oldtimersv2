@font-face {
  font-family: 'InterFace';
  src: url('<%= asset_path('InterFaceLt.ttf') %>');
  font-weight: normal;
  font-style: normal;
}

@import "bootstrap";
@import "variables.css.scss";
@import "mixins.css.scss";

html {
	min-height: 100%;
	position: relative;
}

body {
	margin: 0 0 50px;
}

body, html {
	width: 100%;
	background: $grey;
	font-family: InterFace;
	color: $font-color;
	font-size: 100%;
}

input[type=submit] {
	border: none;
}

#clearfix {
	clear: both;
}
.counter-row-margin{
	margin-left:0;
}

/* PROFILE BORDERS */

.profile-image-container figure {
	margin: 0;

	figcaption {
		text-align: center;
	}
}

.profile-border {
	@include rounded-corner(50em);
	box-shadow: 0 0 1px 1px #CCC;
	padding: 3px;
}

.aspirant-border {
	background: #FFF;
}

.beginner-border {
	background: #f7f3f2; /* Old browsers */
	background-image: -moz-linear-gradient(top,  #f7f3f2 0%, #f7f3f2 26%, #57aab9 100%); /* FF3.6+ */
	background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f7f3f2), color-stop(26%,#f7f3f2), color-stop(100%,#57aab9)); /* Chrome,Safari4+ */
	background-image: -webkit-linear-gradient(top,  #f7f3f2 0%,#f7f3f2 26%,#57aab9 100%); /* Chrome10+,Safari5.1+ */
	background-image: -o-linear-gradient(top,  #f7f3f2 0%,#f7f3f2 26%,#57aab9 100%); /* Opera 11.10+ */
	background-image: -ms-linear-gradient(top,  #f7f3f2 0%,#f7f3f2 26%,#57aab9 100%); /* IE10+ */
	background-image: linear-gradient(to bottom,  #f7f3f2 0%,#f7f3f2 26%,#57aab9 100%); /* W3C */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f7f3f2', endColorstr='#57aab9',GradientType=0 ); /* IE6-9 */
}

::-webkit-input-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; }
::-moz-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; } /* firefox 19+ */
:-ms-input-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; } /* ie */
input:-moz-placeholder { color: $font-color; font-family: InterFace; font-size: 15px; }

button, input[type=submit] {
	font-family: InterFace;
}

.select > input[type="radio"] {
	display: none;
}

.select > input[type="radio"] + label {
	display: inline-block;
	width: 18px;
	height: 18px;
	vertical-align: middle;
  background: url('<%= asset_path('radio_buttons.png') %>') left top no-repeat;
  cursor: pointer;
}

.select > input[type="radio"]:checked + label {
    background: url('<%= asset_path('radio_buttons.png') %>') -18px top no-repeat;
}

.modal-backdrop {
  background-color: rgba(200, 200, 200, 0.4);
}

@import "header.css.scss";
@import "homepage.css.scss";
@import "sign_up.css.scss";
@import "answers.css.scss";
@import "footer.css.scss";