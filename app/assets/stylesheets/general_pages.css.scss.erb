@import "bootstrap";

$blue: #68A7B3;
$white: #FCFCFC;
$grey: #ECEBEB;
$red: #C7403A;
$font-color: #626262;

@font-face {
  font-family: 'InterFace';
  src: url('<%= asset_path('InterFaceLt.ttf') %>');
  font-weight: normal;
  font-style: normal;
}

body, html {
	width: 100%;
	background: $grey;
	font-family: InterFace;
	color: $font-color;
}

.navigation {
	width: 100%;
	height: auto;
	background: $white;
	box-shadow: 0px 0px 4px 3px #AAA;

	.row {
		padding: 15px 0 8px 0;
	}

	.logo-placeholder {
		background: $blue;
	}

	.nav-item {
		text-transform: uppercase;
		height: 100%;
		color: $font-color;
		text-align: center;
	}

	form {
		margin-bottom: 0;
		height: 30px;
		position: relative;

		input {
			height: 30px;
			padding: 0px;
			padding-left: 10px;
			border-radius: 5px;
			border: 1px $grey solid;

		}

		i {
			position: absolute;
			top: 10px;
			left: 5px;
		}
	}
	
	.profile-border {
		border: 1px solid $grey;
		border-radius: 5px;
		width: 30px;
		height: 30px;
	}
}